<!--pages/login/login.wxml-->
<view class="container">

<view class="poster-con">
  <image class="poster-img" src="../../media/images/login/poster.png"></image>
</view>

<view class="login-con margin-top-lg">
  <view class="cu-form-group margin-top">
		<view class="title">姓名</view>
		<input placeholder="请输入真实姓名"></input>
  </view>

  <view class="cu-form-group">
		<view class="title">注册身份</view>
		<picker bindchange="PickerChange" value="{{index}}" range="{{picker}}">
			<view class="picker">
				{{index?picker[index]:''}}
			</view>
		</picker>
  </view>
  
  <view class="cu-form-group">
		<view class="title">职务工号</view>
		<input placeholder=""></input>
		<!-- <text class="cuIcon-locationfill text-orange"></text> -->
  </view>
  
  <view class="cu-form-group">
		<view class="title">居住地址</view>
		<picker mode="region" bindchange="RegionChange" value="{{region}}" custom-item="{{customItem}}">
			<view class="picker">
				{{region[0]}}，{{region[1]}}，{{region[2]}}
			</view>
		</picker>
  </view>

  
  <view class="cu-form-group">
		<view class="title">手机号码</view>
		<input placeholder=""></input>
		<view class="cu-capsule radius">
			<view class="cu-tag bg-blue">
				+86
			</view>
			<view class="cu-tag line-blue">
				中国大陆
			</view>
		</view>
	</view>
	<view class="cu-form-group">
		<view class="title">验证码</view>
		<input placeholder=""></input>
		<button class="cu-btn bg-orange shadow">获取验证码</button>
	</view>



  <view>
    <button class="login-btn cu-btn block bg-black margin-xl lg button-hover" role="button">立即注册</button>
  </view>

</view>

</view>
